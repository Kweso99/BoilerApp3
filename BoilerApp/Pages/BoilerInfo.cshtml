@page
@model BoilerApp.Pages.BoilerInfoModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boiler Information</title>
</head>
<body>
    <h2>Boiler Information</h2>
    <form method="post">
        <label for="BoilerId">Boiler ID:</label>
        <input type="text" id="BoilerId" name="BoilerId" value="@Model.BoilerId" required><br><br>

        <label for="DateOfPurchase">Date of Purchase:</label>
        <input type="date" id="DateOfPurchase" name="DateOfPurchase" value="@Model.DateOfPurchase.ToString("yyyy-MM-dd")" required><br><br>

        <label for="MaxPressure">Max Pressure (Bar):</label>
        <input type="number" id="MaxPressure" name="MaxPressure" value="@Model.MaxPressure" required><br><br>

        <label for="MaxTemperature">Max Temperature (°C):</label>
        <input type="number" id="MaxTemperature" name="MaxTemperature" value="@Model.MaxTemperature" required><br><br>

        <button type="submit">Save</button>
    </form>

    <h3>Change Password</h3>
    <form method="post">
        <label for="NewPassword">New Password:</label>
        <input type="password" id="NewPassword" name="NewPassword" required><br><br>
        <button type="submit">Change Password</button>
    </form>

    @if (Model.PasswordChanged)
    {
        <p style="color:green;">Password changed successfully.</p>
    }
</body>
</html>
